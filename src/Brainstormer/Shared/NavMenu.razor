@using Brainstormer.Models.models

@inject NavigationManager _navigationManager

<MudGrid Justify="Justify.FlexStart">
    @foreach (var item in _navItems)
    {
        <MudItem xs="2">
            <MudButton @onclick="() => NavigateTo(item.Path)"
                       Variant="Variant.Filled"
                       Color="Color.Info">
                @item.Label
            </MudButton>
        </MudItem>
    } 
</MudGrid>
<MudSpacer/>
<MudText Color="Color.Default" Typo="Typo.h3">Brainstormer</MudText>


@code
{
    private readonly IEnumerable<NavigationItem> _navItems = new List<NavigationItem>
    {
        new NavigationItem("1. Setup", "/Setup"),
        new NavigationItem("2. Create", "/Create"),
        new NavigationItem("3. Cull", "/Cull"),
        new NavigationItem("4. Describe", "/Describe"),
        new NavigationItem("5. Rank", "/Rank"),
    };

    private void NavigateTo(string path)
    {
        _navigationManager.NavigateTo(path);
    }
}
